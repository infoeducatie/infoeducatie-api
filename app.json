{
  "name": "infoeducatie-api",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate db:seed"
  },
  "env": {
    "DATABASE_URL": {
      "required": true
    },
    "DB": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "SENTRY_DSN": {
      "required": true
    },
    "AWS_SES_ACCESS_KEY": {
      "required": true
    },
    "AWS_SES_ENDPOINT": {
      "required": true
    },
    "AWS_SES_SECRET_KEY": {
      "required": true
    },
    "AWS_S3_KEY": {
      "required": true
    },
    "AWS_S3_SECRET": {
      "required": true
    },
    "AWS_S3_REGION": {
      "required": true
    },
    "AWS_S3_BUCKET": {
      "required": true
    },
    "AWS_S3_HOST": {
      "required": true
    },
    "DISCOURSE_API": {
      "required": true
    },
    "DISCOURSE_USER": {
      "required": true
    },
    "DISABLE_EMAIL": {
      "required": true
    }
  },
  "addons": [
    "heroku-postgresql"
  ]
}
